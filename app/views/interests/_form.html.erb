    <%= form.text_field :extracurric %>
  </div>

  <div class="field">
    <%= form.label :pastWorkExp %>
    <%= form.text_field :pastWorkExp %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

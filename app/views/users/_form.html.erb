<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :studentId %>
    <%= form.number_field :studentId %>
  </div>

  <div class="field">
    <%= form.label :groupId %>
    <%= form.number_field :groupId %>
  </div>

  <div class="field">
    <%= form.label :profileId %>
    <%= form.number_field :profileId %>
  </div>

  <div class="field">
    <%= form.label :fullName %>
    <%= form.text_field :fullName %>
  </div>

  <div class="field">
    <%= form.label :avatarUrl %>
    <%= form.text_field :avatarUrl %>
  </div>

  <div class="field">
    <%= form.label :tamuEmail %>
    <%= form.text_field :tamuEmail %>
  </div>

  <div class="field">
    <%= form.label :dateOfBirth %>
    <%= form.date_field :dateOfBirth %>
  </div>

  <div class="col d-flex justify-content-center">
    <div class="field">
      <%= form.check_box :gradAssistance %>
      <%= form.label :gradAssistance %>
    </div>
    &nbsp;
    <div class="field">
      <%= form.check_box :isOfficer %>
      <%= form.label :isOfficer %>
    </div>
    &nbsp;
    <div class="field">
      <%= form.check_box :isAdmin %>
      <%= form.label :isAdmin %>
    </div>
  </div>

  <div class="col d-flex justify-content-center">
    <div class="actions">
      <% if current_user.studentId == @user.studentId %>
          <%= link_to 'Show', user_path(@user.studentId), class:"btn btn-outline-primary" %> 
      <% end %>
      <%= form.submit class: 'btn btn-outline-primary' %>
    </div>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <%= link_to 'Forum', posts_path, :class => "breadcrumb-item" %>
            <% if current_user.isAdmin %>
              <%= link_to 'All Users', users_path, :class => "breadcrumb-item" %>
            <% end %>
            <% if current_user.groupId.present? %>
              <%= link_to 'Group', group_path(current_user.groupId), :class => "breadcrumb-item" %>
            <% end %>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src=<%= @user.lastName %> alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3"><%= @user.firstName %></h5>
            <% if @user.isAdmin %>
              <p class="text-muted mb-1">
                Admin
              </p>
            <% end %>
            <% if @user.isOfficer %>
              <p class="text-muted mb-1">
                Officer
              </p>
            <% end %>  
            <% if @user.gradAssistance %>
              <p class="text-muted mb-1">
                Grad Assistance
              </p>
            <% end %>  
      
            <div class="d-flex justify-content-center mb-2">
              <%= link_to 'Edit Profile', edit_user_path(@user), :class => "btn btn-outline-primary ms-1" %>
              <% if not Interest.where(userId: current_user.studentId).exists? %>
                <%= link_to 'Edit Interest', new_interest_path, :class => "btn btn-outline-primary ms-1" %>
              <% else %>
                <%= link_to 'Edit Interest', interest_path(current_user.studentId), :class => "btn btn-outline-primary ms-1"  %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= @user.firstName %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= @user.tamuEmail %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Student Id</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= @user.studentId %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Group Id</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= @user.groupId %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Insterests Id</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= @user.insterestsId %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Birthday</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= @user.dateOfBirth %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
